package sortingandsearching;

import java.util.Arrays;

public class BinarySearch {
	public static void main(String[] args) {
		int[] arr = {9,3,5,8,2,1,4,6,7,10};
		System.out.println("Main Array : "+Arrays.toString(arr));
		binarySearch(arr, 4);
	}
	public static void binarySearch(int[] arr, int ele) //int
	{
		BubbleSort.bubbleSort(arr);// before binary search we need the array must be sorted.
		int start = 0, end = arr.length-1, mid = (start + end)/2;
		while(start<=end)
		{
			if (arr[mid] == ele) {
				return mid;
			}
			else if (ele > arr[mid]) {
				start = mid+1;
			}
			else if (ele < arr[mid]) {
				end = mid-1;
			}
			mid = (start + end)/2;
		}
		if (start > end) {
			return -1;
		}
	}

}
